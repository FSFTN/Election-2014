<table id= "search_result" class = "table table-bordered">
  <tbody>
    <tr>
      <td></td>
      <% @candidates.take(5).each do |candidate| %>
      <td class = "col-md-2 col-sm-4 col-xs-12">
        <% if candidate.avatar %>
        <%= image_tag candidate.avatar,  class: "col-md-12 col-xs-12"%> 
        <% end %>
        <% end %>
      </td>
    </tr>
    <tr>
      <td class="col-md-1 col-sm-2 col-xs-12">Name  </td>
      <% @candidates.take(5).each do |candidate| %>
      <td class=" col-md-2 col-sm-4 col-xs-12">
        <%= link_to candidate.name, candidate_path(candidate.id) %>
      </td>
      <% end %>
    </tr>
    <tr>
      <td>Age</td>
      <% @candidates.take(5).each do |candidate| %>
      <td class=" col-md-2 col-sm-4 col-xs-12">
        <%- if candidate.age %>
        <%= candidate.age%>
        <% else %>
        <% end %>
      </td>
      <% end %>
    </tr>

    <tr>
      <td>Party</td>
      <% @candidates.take(5).each do |candidate| %>
      <td>
        <%= candidate.party.name%>
      </td>
      <% end %>
    </tr>
    <tr>
      <td>Wiki link</td>
      <% @candidates.take(5).each do |candidate| %>
      <td>
        <%- if candidate.wikipedia_link %>
        <%= candidate.wikipedia_link%>
        <% else %>
        <% end %> 
      </td>
      <% end %>
    </tr>

    <tr>
      <td>Manifesto</td>
      <% @candidates.take(5).each do |candidate| %>
      <%- if candidate.party.manifesto %>
      <%= candidate.party.manifesto%>
      <% else %>
      <% end %>
      <% end %>
    </tr>
  </tbody>
</table>

